{
  "swagger": "2.0",
  "info": {
    "title": "Skill API",
    "description": "API endpoints for SkillUp",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3005"
    }
  ],
  "schemes": ["http", "https"],
  "paths": {
    "/user/signup": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "parameters": [
          {
            "name": "User Inputs",
            "in": "body",
            "description": "User Details",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User created successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/email/generate-Otp": {
      "post": {
        "tags": ["Users"],
        "summary": "Send Otp to email to activate account",
        "parameters": [
          {
            "name": "email",
            "in": "body",
            "descrition": "sent otp to email",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/GenerateAndVerifyOtpViaEmail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OTP sent to email successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/phone/generate-otp": {
      "post": {
        "tags": ["Users"],
        "in": "body",
        "summary": "Send Otp to phoneNumber to activate Account",
        "parameters": [
          {
            "name": "PhoneNumber",
            "in": "body",
            "descrition": "sent otp to Phone Number",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/generateAndVerifyOtpViaPhoneNumber"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "otp genrated successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/email/verify-otp": {
      "post": {
        "tags": ["Users"],
        "summary": "Verify otp to activate your account ",
        "parameters": [
          {
            "name": "email Verification",
            "in": "body",
            "descrition": "Verify otp through email to activate your Account ",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/GenerateAndVerifyOtpViaEmail"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "otp verified successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/phone/verify-otp": {
      "post": {
        "tags": ["Users"],
        "summary": "Verify otp to activate your account ",
        "parameters": [
          {
            "name": "phone Number Verification",
            "in": "body",
            "descrition": "Verify otp through Phone Number to activate your Account ",
            "required": "true",
            "schema": {
              "$ref": "#/definitions/generateAndVerifyOtpViaPhoneNumber"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "otp verified succesfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["Users"],
        "summary": "login user with Email and password ",
        "parameters": [
          {
            "name": "Login inputs",
            "in": "body",
            "description": "Login inputs ",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "login successfully"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/user/login/token": {
      "post": {
        "tags": ["Users"],
        "summary": "Login user with token",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "Token for authentication",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Authorization sent to email successfully"
          },
          "400": {
            "description": "Acess denied !! Invalid token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "definitions": {
    "UserInput": {
      "type": "object",
      "properties": {
        "userName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["Admin", "Solver"]
        },
        "phoneNumber": {
          "type": "string"
        }
      },
      "required": ["userName", "password", "role", "email", "phoneNumber"]
    },
    "GenerateAndVerifyOtpViaEmail": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "otp": {
          "type": "string"
        }
      },
      "required": ["email"]
    },
    "GenerateAndVerifyOtpViaPhoneNumber": {
      "type": "object",
      "properties": {
        "phoneNumber": {
          "type": "string"
        },
        "otp": {
          "type": "string"
        }
      },
      "required": ["phoneNumber"]
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "TokenInput": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        }
      }
    }
  }
}
